<div class="container">
 
  <div class="row justify-content-center">
  <div class="col-10">
    <%=render 'shared/errors', obj: @user%>
    <%= form_with(model: @user, class: "shadow mb-2 mt-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label ml-3 mt-3 text-light" %>
        <div class="col-9">
          <%= f.text_field :username, class:"form-control shadow mb-1 mt-3 bg-white rounded", placeholder: "Enter a username" %>
        </div>
      </div>

    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label ml-3 text-light" %>
        <div class="col-9">
          <%= f.email_field :email, class:"form-control shadow mb-1 bg-white rounded", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-label ml-3 text-light" %>
        <div class="col-9">
          <%= f.password_field :password, class:"form-control shadow mb-1 bg-white rounded", placeholder: "Choose a password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class:"btn btn-outline-light btn-lg mb-3" %>
      </div>

    <% end %>
      </div>
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-info" %>
    </div>
</div>}
<h1 class="ml-4 mt-4"><%= @user.username%>'s profile</h1>
<h1 class="ml-4 mt-4 badge badge-warning" id="badge"><%= @user.bio %></h1>

<div class="ml-4 mt-4">
<% if logged_in?%>
  <%= link_to 'Private Articles', private_articles_path, class: "btn btn-outline-dark" if @user == current_user  %>
  <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-outline-info" if @user == current_user  %>
  <% if @user == current_user || current_user.admin? %>
  <%= link_to "Delete user", user_path(@user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
  <%end%> 
<% end %>
  </div>

<h2 class="text-center mt-4">Articles</h2>

<div class="flickr_pagination row justify-content-center mt-4">
  <%= will_paginate @articles, :container => false %>
</div>


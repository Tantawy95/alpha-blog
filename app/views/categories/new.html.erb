<h1 class="text-center mt-4">Create a new article</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%=render 'shared/errors', obj: @category%>
      <%= form_with(model: @category, class: "shadow mb-2 mt-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label ml-3 mt-3 text-light" %>
          <div class="col-9">
            <%= f.text_field :name, class:"form-control shadow mb-1 mt-3 bg-white rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Create Category", class:"btn btn-outline-light btn-lg mb-3" %>
        </div>
      <% end %>
        </div>
      <%= link_to '[Cancel and return to categories listing]', categories_path, class: "text-info" %>
    </div>
</div>
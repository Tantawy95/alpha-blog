<%=render 'shared/errors', obj: @category%>
<%= form_with(model: @category, class: "shadow mb-2 mt-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label ml-3 mt-3 text-light" %>
    <div class="col-9">
      <%= f.text_field :name, class:"form-control shadow mb-1 mt-3 bg-white rounded", placeholder: "Enter a name" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class:"btn btn-outline-light btn-lg mb-3") %>
  </div>
<% end %>
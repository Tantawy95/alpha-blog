<div class="container">
 
  <div class="row justify-content-center">
  <div class="col-10">
    <%=render 'shared/errors', obj: @article%>
    <%= form_with(model: @article, class: "shadow mb-2 mt-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label ml-3 mt-3 text-light" %>
        <div class="col-9">
          <%= f.text_field :title, class:"form-control shadow mb-1 mt-3 bg-white rounded", placeholder: "Title of article" %>
        </div>
      </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label ml-3 text-light" %>
        <div class="col-9">
          <%= f.text_area :description, rows: 10, class:"form-control shadow mb-1 bg-white rounded", placeholder: "Description of article" %>
        </div>
      </div>

      <div class="form-group row">
      <%= f.label :category, class: "col-2 col-form-label ml-3 text-light" %>
        <div class="col-9 mt-2">
          <a class = "text-white">Make your selection from the list below (can be empty), you can select more than one category by pressing ctrl or command key.</a>
          <%= f.collection_select :category_ids, Category.all, :id, :name,{prompt: nil}, 
            {multiple: true, size: 4,class: "custom-select shadow rounded mt-1 "} %>
        </div>
      </div>


      <div class="form-group row justify-content-center">
        <%= f.submit(@article.new_record? ? "Create Article" : "Update Article", class:"btn btn-outline-light btn-lg mb-3") %>
      </div>

    <% end %>
      </div>
    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-info" %>
    </div>
</div>